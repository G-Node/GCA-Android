<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
    <TextView
            android:id="@+id/ConTitle"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
			android:gravity="left"
            android:textStyle="bold"
            android:background="@android:color/holo_orange_light"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    
        
        <TextView
            android:id="@+id/ConTopic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_below="@+id/ConTitle"
            android:textAppearance="?android:attr/textAppearanceSmall" />
		
        <View
			android:id="@+id/bar1"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="3dp"            
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:layout_below="@+id/ConTopic"
		    android:background="@android:color/darker_gray"/>
        
        

        <TextView
            android:id="@+id/ConAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bar1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/ConAfName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ConAuthor"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_below="@+id/ConAfName"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        
        
        <TextView
            android:id="@+id/ConACK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/Conrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ConACK"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
  
</ScrollView>