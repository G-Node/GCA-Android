<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
	
    <RelativeLayout 
    android:paddingTop="3dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#C4FFB7" >
    
    <TextView
        android:id="@+id/session_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/session_track_chair"
        android:layout_below="@+id/session_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:textStyle="normal"/>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/session_track_chair"
        android:background="#FCFFB7" />
    
    
    </RelativeLayout>
</TableRow>